/* page background is already white */
.container {
  padding: 30rpx;
  background-color: #ffffff;
  min-height: 100vh;
}

.task-header {
  background-color: #ffffff;
  padding: 40rpx;
  border: 2rpx solid #eeeeee;
  border-radius: 8rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.task-header .title {
  font-size: 40rpx;
  font-weight: 800;
  color: #000;
  margin-bottom: 20rpx;
}

.task-header .reward {
  font-size: 48rpx;
  color: #000;
  font-weight: 800;
  display: inline-block;
  border-bottom: 4rpx solid #000;
  padding-bottom: 4rpx;
}

.section {
  background-color: #fff;
  padding: 0;
  margin-bottom: 50rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 800;
  color: #000;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #000;
  padding-left: 20rpx;
}

.content {
  color: #333;
  line-height: 1.8;
  font-size: 30rpx;
}

.upload-area {
  width: 100%;
  height: 400rpx;
  background-color: #fafafa;
  border: 4rpx dashed #ccc;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transition: all 0.2s;
}

.upload-area:active {
  background-color: #f0f0f0;
  border-color: #000;
}

.upload-icon {
  font-size: 80rpx;
  color: #000;
  font-weight: 100;
}

.upload-text {
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
  font-weight: bold;
}

.preview-img {
  width: 100%;
  height: 380rpx;
  object-fit: contain;
}

.change-tip {
  font-size: 24rpx;
  color: #000;
  margin-top: 10rpx;
  text-decoration: underline;
}

.footer {
  margin-top: 60rpx;
  padding-bottom: 40rpx;
}

