.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.form-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.input {
  width: 100%;
  height: 90rpx;
  border-bottom: 1rpx solid #eee;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  height: 240rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.picker {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #eee;
  color: #666;
}

.footer {
  margin-top: 60rpx;
  width: 100%;
}
