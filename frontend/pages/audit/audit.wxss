/* page background is already white */
.top-nav {
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 2rpx solid #000;
  width: 100%;
}

.top-nav .title {
  font-size: 34rpx;
  font-weight: 800;
  color: #000;
}

.list-container {
  height: calc(100vh - 100rpx);
  padding: 30rpx;
  box-sizing: border-box;
}

.audit-card {
  background-color: #fff;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.user-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.staff {
  font-size: 30rpx;
  font-weight: 800;
  color: #000;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.task-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.remarks {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  background: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
}

.remarks .label {
  font-weight: bold;
}

.img-hint {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 10rpx;
  text-align: right;
  text-decoration: underline;
}

.img-scroll {
  width: 100%;
  white-space: nowrap;
}

.img-container {
  display: flex;
  gap: 20rpx;
}

.proof-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 4rpx;
  background-color: #f8f8f8;
  border: 2rpx solid #eee;
  flex-shrink: 0;
}

.btn-group {
  display: flex;
  margin-top: 30rpx;
  gap: 20rpx;
}

.btn-group button {
  flex: 1;
  font-size: 28rpx;
  border-radius: 4rpx;
  font-weight: bold;
}

.btn-reject {
  background-color: #fff;
  color: #000;
  border: 2rpx solid #000;
}

.btn-approve {
  background-color: #000;
  color: #fff;
  border: 2rpx solid #000;
}

/* Modal */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.modal-content {
  background-color: #fff;
  width: 80%;
  padding: 40rpx;
  border-radius: 20rpx;
}

.modal-title {
  text-align: center;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.modal-input {
  background-color: #f8f8f8;
  height: 80rpx;
  padding: 0 20rpx;
  border-radius: 8rpx;
  margin-bottom: 40rpx;
}

.modal-btns {
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #eee;
  padding-top: 30rpx;
}

.modal-confirm {
  color: #fa5151;
  font-weight: bold;
}

.empty {
  text-align: center;
  padding: 100rpx;
  color: #ccc;
}
