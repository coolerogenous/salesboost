.top-nav {
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 2rpx solid #f0f0f0;
  width: 100%;
}

.top-nav .title {
  font-size: 32rpx;
  font-weight: bold;
}

.list-container {
  height: calc(100vh - 100rpx);
  padding: 20rpx;
  box-sizing: border-box;
}

.audit-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.user-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.staff {
  font-size: 28rpx;
  font-weight: bold;
}

.time {
  font-size: 22rpx;
  color: #999;
}

.task-name {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.proof-img {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
  background-color: #f8f8f8;
}

.btn-group {
  display: flex;
  margin-top: 30rpx;
  gap: 20rpx;
}

.btn-group button {
  flex: 1;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.btn-reject {
  background-color: #fff;
  color: #fa5151;
  border: 1rpx solid #fa5151;
}

.btn-approve {
  background-color: #07c160;
  color: #fff;
}

/* Modal */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.modal-content {
  background-color: #fff;
  width: 80%;
  padding: 40rpx;
  border-radius: 20rpx;
}

.modal-title {
  text-align: center;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.modal-input {
  background-color: #f8f8f8;
  height: 80rpx;
  padding: 0 20rpx;
  border-radius: 8rpx;
  margin-bottom: 40rpx;
}

.modal-btns {
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #eee;
  padding-top: 30rpx;
}

.modal-confirm {
  color: #fa5151;
  font-weight: bold;
}

.empty {
  text-align: center;
  padding: 100rpx;
  color: #ccc;
}
