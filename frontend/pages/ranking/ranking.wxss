/* page background is already white from app.wxss */

.rank-header {
  background-color: #ffffff;
  padding: 40rpx 40rpx 20rpx;
  color: #000000;
  text-align: center;
  width: 100%;
  box-sizing: border-box;
}

.rank-title {
  font-size: 48rpx;
  font-weight: 800;
  margin-bottom: 30rpx;
  letter-spacing: -2rpx;
}

.tab-bar {
  display: flex;
  justify-content: center;
  gap: 60rpx;
  border-bottom: 2rpx solid #f0f0f0;
  padding-bottom: 20rpx;
}

.tab {
  font-size: 30rpx;
  padding: 10rpx 10rpx;
  color: #999;
  font-weight: bold;
  position: relative;
}

.tab.active {
  color: #000;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: -22rpx;
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: #000;
}

.my-rank {
  background-color: #000;
  text-align: center;
  padding: 20rpx;
  font-size: 26rpx;
  color: #fff;
  font-weight: bold;
  width: 90%;
  margin: 20rpx auto;
  border-radius: 4rpx;
  box-sizing: border-box;
}

.rank-list {
  padding: 0 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.rank-item {
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f8f8f8;
}

.rank-item.is-me {
  background-color: #fff; /* 不再用背景色区分 */
  /* 可以加个小黑点或其他标识，这里简化，只靠上面的my-rank条提示 */
}

.rank-num {
  width: 80rpx;
  font-size: 36rpx;
  font-weight: 800;
  color: #000;
  text-align: center;
  margin-right: 10rpx;
}

.top-three {
  color: #000; /* 去掉金色，保持黑白 */
  font-size: 44rpx;
}

.user-info {
  flex: 1;
  margin-left: 30rpx;
}

.user-info .name {
  font-size: 32rpx;
  font-weight: bold;
}

.user-info .staff-id {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

.points {
  font-size: 36rpx;
  font-weight: 800;
  color: #000;
}

.empty {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  filter: grayscale(100%); /* 灰色图标 */
}

.empty-text {
  font-size: 28rpx;
  color: #ccc;
  margin-top: 20rpx;
}
