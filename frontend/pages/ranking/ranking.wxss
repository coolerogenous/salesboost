.rank-header {
  background-color: #07c160;
  padding: 40rpx 40rpx 20rpx;
  color: white;
  text-align: center;
  width: 100%;
  box-sizing: border-box;
}

.rank-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.tab-bar {
  display: flex;
  justify-content: center;
  gap: 40rpx;
}

.tab {
  font-size: 28rpx;
  padding: 10rpx 40rpx;
  border-radius: 30rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

.tab.active {
  background-color: #fff;
  color: #07c160;
  font-weight: bold;
}

.my-rank {
  background-color: #fffbe6;
  text-align: center;
  padding: 20rpx;
  font-size: 26rpx;
  color: #ff9800;
  font-weight: bold;
  width: 100%;
  box-sizing: border-box;
}

.rank-list {
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.rank-item {
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 2rpx;
}

.rank-item.is-me {
  background-color: #f0faf5;
  border-left: 6rpx solid #07c160;
}

.rank-num {
  width: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #999;
}

.top-three {
  color: #ff9800;
  font-size: 40rpx;
}

.user-info {
  flex: 1;
  margin-left: 20rpx;
}

.user-info .name {
  font-size: 30rpx;
  font-weight: bold;
}

.user-info .staff-id {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.points {
  font-size: 32rpx;
  font-weight: bold;
  color: #fa5151;
}

.empty {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #ccc;
  margin-top: 20rpx;
}
