<view class="container">
  <view class="rank-header">
    <view class="rank-title">积分排行榜</view>
    <view class="rank-subtitle">看看谁是推广之星</view>
  </view>

  <view class="rank-list">
    <block wx:for="{{rankingList}}" wx:key="staff_id">
      <view class="rank-item">
        <view class="rank-num {{index < 3 ? 'top-three' : ''}}">{{index + 1}}</view>
        <view class="user-info">
          <view class="name">{{item.username}}</view>
          <view class="staff-id">{{item.staff_id}}</view>
        </view>
        <view class="points">{{item.total_points}} 分</view>
      </view>
    </block>
  </view>
</view>
