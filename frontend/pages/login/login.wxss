.login-container {
  padding: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  height: 100vh;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-top: 100rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
}

.form-group {
  width: 100%;
}

.input {
  width: 100%;
  height: 90rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.btn-primary {
  width: 100%;
  margin-top: 60rpx;
}

.tips {
  margin-top: 40rpx;
  font-size: 24rpx;
  color: #999;
  text-align: center;
}
