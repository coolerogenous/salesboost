/* page background is already white from app.wxss */

.user-card {
  background-color: #ffffff;
  padding: 60rpx 40rpx;
  color: #000000;
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f0f0f0;
}

.avatar-box {
  width: 120rpx;
  height: 120rpx;
  background-color: #f0f0f0;
  border-radius: 50%; /* 圆形 */
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2rpx solid #333;
}

.avatar {
  font-size: 50rpx;
  font-weight: bold;
  color: #333;
}

.info-box {
  flex: 1;
  margin-left: 30rpx;
}

.info-box .name {
  font-size: 40rpx;
  font-weight: 800;
  letter-spacing: -1rpx;
}

.info-box .staff-id {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
  font-family: monospace;
}

.points-box {
  text-align: right;
}

.point-num {
  font-size: 50rpx;
  font-weight: 800;
  display: block;
}

.point-label {
  font-size: 22rpx;
  color: #999;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.stats-grid {
  display: flex;
  background-color: #ffffff;
  padding: 40rpx 0;
  width: 100%;
  border-bottom: 2rpx solid #f0f0f0;
}

.stat-item {
  flex: 1;
  text-align: center;
  border-right: 2rpx solid #f0f0f0;
}

.stat-item:last-child {
  border-right: none;
}

.stat-item .num {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
}

.stat-item .label {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 保持一点颜色区分状态，但不要太抢眼 */
.color-green { color: #000; } /* 极简主义，用黑色 */
.color-orange { color: #666; }
.color-red { color: #000; }

.section {
  background-color: #fff;
  width: 100%;
  margin-top: 0;
}

.section-title {
  padding: 30rpx 40rpx;
  font-size: 30rpx;
  font-weight: 800;
  border-bottom: 2rpx solid #f0f0f0;
  margin-top: 20rpx;
}

.cell {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 40rpx;
  border-bottom: 2rpx solid #f8f8f8;
  font-size: 30rpx;
  font-weight: 500;
}

.cell:active {
  background-color: #fafafa;
}

.arrow {
  color: #ccc;
  font-size: 24rpx;
  font-weight: bold;
}

.badge {
  background-color: #000;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-left: auto;
  margin-right: 20rpx;
  font-weight: bold;
}

.log-item {
