/**app.wxss**/
page {
  background-color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  font-size: 28rpx;
  color: #000000;
  line-height: 1.6;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 通用按钮样式 - 黑底白字 */
.btn-primary {
  background-color: #000000 !important;
  color: #ffffff !important;
  font-weight: bold;
  border-radius: 4rpx; /* 更锐利的圆角 */
  padding: 24rpx 0;
  font-size: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.btn-primary:active {
  opacity: 0.8;
}

/* 通用卡片样式 - 极简边框 */
.card {
  background: #ffffff;
  border: 2rpx solid #eeeeee;
  border-radius: 8rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

/* 标题样式 */
.h1 { font-size: 40rpx; font-weight: 800; margin-bottom: 20rpx; }
.h2 { font-size: 34rpx; font-weight: 700; margin-bottom: 16rpx; }
.text-muted { color: #888888; font-size: 24rpx; }
